{
  "manifest_version": 3,
  "name": "Page to Sheet",
  "version": "1.1.0",
  "description": "ページのタイトルとURLをGoogleスプレッドシートに自動追記するChrome拡張",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://script.google.com/*",
    "https://script.googleusercontent.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "send-page-to-sheet": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "現在のページをスプレッドシートに記録"
    }
  }
}
